@model WebFileManager.Models.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutWithRibbon.cshtml";
}

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <div class="panel panel-default">
            <div class="panel-heading">Login</div>
            <div class="panel-body">
                @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "form form-horizontal" }))
                {
                    <div class="form-group">
                        <label class="col-md-4 control-label">User name</label>

                        <div class="col-md-6">
                            @Html.TextBoxFor(m => m.username, new { @class = "form-control", placeholder = "Enter username" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-4 control-label">Password</label>

                        <div class="col-md-6">
                            @Html.PasswordFor(m => m.password, new { @class = "form-control", placeholder = "Enter Password" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-6 col-md-offset-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="fa fa-btn fa-sign-in"></i>Login
                            </button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
